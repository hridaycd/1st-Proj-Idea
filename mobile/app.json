{
  "expo": {
    "name": "Mobile App",
    "slug": "mobile-app",
    "scheme": "mobileapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      ["sentry-expo"]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.bookingapp"
    },
    "android": {
      "package": "com.yourcompany.bookingapp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "environment": "development",
      "apiBaseUrl": "http://10.0.2.2:8000",
      "productionApiBaseUrl": "https://api.example.com",
      "sentryDsn": "",
      "amplitudeApiKey": "",
      "githubUrl": "https://github.com/your-org/your-repo"
    },
    "privacy": "public"
  }
}

